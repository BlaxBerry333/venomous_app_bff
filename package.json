{
  "name": "venomous_apps_bff",
  "private": true,
  "version": "1.0.0",
  "license": "UNLICENSED",
  "author": "blaxberry333",
  "description": "blaxberry333's venomous apps' BFF",
  "main": "dist/index.js",
  "scripts": {
    "start:dev": "dotenv -e .env.development -- nodemon --exec ts-node src/index.ts",
    "start:prod": "dotenv -e .env.production -- node dist/index.js",
    "build": "rollup --config",
    "prepare": "husky",
    "check-packages": "npx depcheck",
    "check-type": "tsc --noEmit",
    "check-eslint": "eslint . --cache --cache-location=./.cache/.eslintcache",
    "check-prettier": "prettier . --check",
    "check-all": "concurrently \"yarn check-packages\" \"yarn check-type\" \"yarn check-eslint\" \"yarn check-prettier\"",
    "prettier": "prettier . --write --cache --cache-location=./.cache/.prettiercache",
    "eslint": "eslint .",
    "format-all": "concurrently \"yarn eslint\" \"yarn prettier\"",
    "codegen": "graphql-codegen --config graphql-codegen.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@graphql-tools/graphql-file-loader": "^8.0.11",
    "@graphql-tools/load": "^8.0.12",
    "@graphql-tools/schema": "^10.0.16",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "express": "^4.21.1",
    "graphql": "^16.10.0",
    "nodemon": "^3.1.7",
    "venomous_app_protobuf": "github:BlaxBerry333/venomous_app_protobuf"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/typescript": "4.1.2",
    "@graphql-codegen/typescript-document-nodes": "4.0.12",
    "@graphql-codegen/typescript-resolvers": "4.4.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/google-protobuf": "^3.15.12",
    "@types/graphql": "^14.5.0",
    "concurrently": "^9.1.0",
    "globals": "^15.11.0",
    "google-protobuf": "^3.21.4",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rollup": "^4.30.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  }
}
